{
  "openapi": "3.0.0",
  "info": {
    "title": "API",
    "description": "Documentation",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333/"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "Lista todos os usuários (listAll)",
        "description": "Retorna uma lista de todos os usuários cadastrados, no formato 'safe' (sem senha).",
        "responses": {
          "200": {
            "description": "Lista de usuários retornada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SafeUser"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "post": {
        "summary": "Cria um novo usuário (create)",
        "description": "Cria um novo usuário e retorna os dados 'safe' do usuário criado.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              },
              "example": {
                "name": "luffy",
                "email": "luffy@gmail.com",
                "password": "123456",
                "status": "active"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SafeUser"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos (erro de validação Zod)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Autentica um usuário (login)",
        "description": "Tenta autenticar um usuário com email e senha.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              },
              "example": {
                "email": "luffy@gmail.com",
                "password": "123456"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login bem-sucedido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Sucess"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos (validação Zod) ou credenciais incorretas",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Busca usuário por ID (findById)",
        "description": "Retorna os dados completos de um usuário específico.",
        "parameters": [
          {
            "$ref": "#/components/parameters/IdParam"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      },
      "delete": {
        "summary": "Deleta usuário por ID (delete)",
        "description": "Exclui um usuário do banco de dados.",
        "parameters": [
          {
            "$ref": "#/components/parameters/IdParam"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário deletado com sucesso (sem conteúdo)"
          },
          "400": {
            "description": "ID inválido ou erro na exclusão",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/update/{id}": {
      "put": {
        "summary": "Atualiza usuário por ID (update)",
        "description": "Atualiza os campos (name, password, etc.) de um usuário. O email geralmente não é atualizável por aqui.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateDto"
              },
              "example": {
                "name": "Monkey D. Luffy",
                "password": "new_password_123"
              }
            }
          }
        },
        "parameters": [
          {
            "$ref": "#/components/parameters/IdParam"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SafeUser"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos ou ID não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "IdParam": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "description": "ID do usuário (geralmente UUID)"
        }
      }
    },
    "schemas": {
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome completo do usuário."
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Endereço de e-mail exclusivo."
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "Senha do usuário (mínimo 6 caracteres)."
          },
          "status": {
            "type": "string",
            "description": "Status inicial do usuário.",
            "enum": ["active", "inactive"]
          }
        },
        "required": ["name", "email", "password"]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        },
        "required": ["email", "password"]
      },
      "UpdateDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome completo do usuário (opcional)."
          },
          "password": {
            "type": "string",
            "format": "password",
            "description": "Nova senha do usuário (opcional)."
          },
          "status": {
            "type": "string",
            "description": "Status do usuário (opcional).",
            "enum": ["active", "inactive"]
          }
        }
      },
      "SafeUser": {
        "type": "object",
        "description": "Modelo de usuário retornado sem a senha (toSafeUser).",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive"]
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "User": {
        "allOf": [
          {
            "$ref": "#/components/schemas/SafeUser"
          },
          {
            "type": "object",
            "properties": {
              "password": {
                "type": "string",
                "format": "password",
                "description": "Senha criptografada (somente para uso interno)"
              }
            },
            "required": ["password"]
          }
        ]
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Mensagem de erro amigável, frequentemente da validação Zod."
          }
        }
      }
    }
  }
}
